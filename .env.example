# Environment configuration for qrlink

# Database
DATABASE_URL=sqlite:data/shortener.db

# Public base URL for generating short links
BASE_URL=http://localhost:8080

# Server binding
HOST=0.0.0.0
PORT=8080

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# QR Code branding (optional)
QR_BRANDING_LOGO=assets/logo.svg
QR_SIZE=512

# Cleanup expired links interval in minutes (0 to disable, default: 60)
CLEANUP_INTERVAL_MINUTES=60

# Logging
RUST_LOG=qrlink=info,tower_http=info
